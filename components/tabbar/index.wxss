/* components/tabbar/index.wxss */

.operate {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 88rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}

.textarea {
  width: 460rpx;
  min-height: 66rpx;
  background: #f7f8fa;
  border-radius: 10rpx;
  margin-left: 30rpx;
  position: relative;
   display: flex;
  align-items: center;
}

.textarea textarea {
  width: 460rpx;
  
}

.operate_msg {
  position: absolute;
  left: 50%;      
  top: 50%;
  transform: translate(-50%, -50%);
  background: #f7f8fa;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.operate image {
  width: 30rpx;
  height: 30rpx;
}

.operate text {
  font-size: 22rpx;
  color: #656565;
  margin-left: 10rpx;
}

.operate_like, .operate_share {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
