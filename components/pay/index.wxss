/* components/pay/index.wxss */

.pay_back {
  width: 100%;
  /* height: 100%; */
  position: fixed;
  background: rgba(2, 2, 3, 0.4);
  top: 0;
}

.pay {
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
}

.pay_title {
  height: 86rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 0 30rpx;
  border-bottom: 1px solid #e8e7e8;
}

.cancel{
  padding: 30rpx 0 30rpx 30rpx;
}

.pay_title text {
  color: #656565;
}

.pay_title .color{
  color: #F5A43A;
  padding-left: 14rpx;
}

.pay_btn {
  width: 690rpx;
  height: 88rpx;
  background: #28db84;
  border-radius: 44px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx auto 90rpx auto;
}

.pay_btn image {
  width: 50rpx;
  height: 50rpx;
}

.pay_btn text {
  color: #fff;
  font-size: 32rpx;
  padding-left: 20rpx;
}
