<!--components/msg/index.wxml-->
<view class='msg'>
    <view>
      <text class='msg_title'>精选留言</text>
      <text class='msg_num'>{{msgList.length}}</text>
    </view>

    <view class='msg_list'>
      <block wx:for='{{msgList}}'>
        <view class='msg_item'>
          <view class='msg_user_box'>
            <view class='msg_user'>
              <image src='{{item.image}}'></image>
              <view class='user_info'>
                <view class='user_name_box'>
                  <text class='user_name'>{{item.name}}</text>
                  <text wx:if='{{item.isMaster}}' class='user_master'>圈主</text>
                </view>
                <text class='msg_time'>{{item.time}}</text>
              </view>
            </view>
            <view class='msg_like'>
              <image wx:if='{{item.isLike}}' src='/image/msg_like_hover.png' bindtap='changeLike'></image>
              <image wx:else src='/image/msg_like.png' bindtap='changeLike'></image>
              <text>{{item.likeNum}}</text>
            </view>
          </view>
          <view class='msg_content'>{{item.content}}</view>
        </view>
      </block>
    </view>
  </view>