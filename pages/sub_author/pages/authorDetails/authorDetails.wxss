/* pages/sub_author/pages/authorDetails/authorDetails.wxss */

/* 大咖信息 */

/* nav */

.nav {
  width: 100%;
  height: 85rpx;
  border-bottom: 1px solid #e8e7e8;
  display: flex;
  flex-direction: row;
}

.nav_item {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.nav_item text {
  font-size: 30rpx;
}

.nav_item .active {
  font-weight: 500;
}

.line {
  width: 60rpx;
  height: 4rpx;
  background: #f5b83a;
  margin-top: 25rpx;
  position: absolute;
  bottom: 0;
}

/* 精品文章 */

.article_list {
  margin-bottom: 60rpx;
}

.article_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}

.article_item image {
  width: 650rpx;
  height: 250rpx;
  border-radius: 10rpx 10rpx 0px 0px;
}

.article_item .article_title {
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
  color: #242831;
  margin-top: 30rpx;
}

.article_item text {
  width: 648rpx;
  margin-top: 17rpx;
  font-size: 24rpx;
  line-height: 31rpx;
  color: #656565;
  font-weight: 500;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 个人介绍 */

.author_intro {
  margin-bottom: 128rpx;
}

.intro_item {
  margin: 40rpx 30rpx 0 30rpx;
}

.item_title {
  color: #020202;
  font-weight: bold;
  margin-bottom: 36rpx;
}

.intro_item .item_text {
  line-height: 36rpx;
  margin-top: 20rpx;
}

.intro_item  text {
  color: #020202;
  line-height: 42rpx;
}
