/* 留言样式 */

.background{
  /* padding-bottom: 450rpx; */
  padding-top:1rpx;
}

.msgTextareaCon{
  position: relative;
  width: 100%;
}
.msgTextarea{
  margin: 40rpx auto;
  width: 100%;
  height: 282rpx;
  border-top: 1px solid #EAEAEA;
  background-color: #fff;
  padding: 26rpx 30rpx 30rpx 28rpx; 
  box-sizing: border-box;
  font-size: 24rpx;
}
.msgPlaceholder{
  font-size: 24rpx;
  color: #8F8F8F;
}
.currentNoteLen{
  position: absolute;
  right: 30rpx;
  bottom:30rpx;
  color: #AFAFAF;
  font-size: 20rpx;
}
.msgBtn{
  margin: 0 auto 50rpx auto;
  background-color: #32A7FF;
  color: #fff;
  font-size: 32rpx;
  width: 690rpx;
  height: 80rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
