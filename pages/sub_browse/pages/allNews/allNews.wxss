/* pages/sub_browse/pages/allNews/allNews.wxss */

.background {
  background-color: #f5f5f5;
}

/* 每日一谈 */

.image_box {
  position: relative;
}

.image_back {
  width: 100%;
  height: 423rpx;
}

.image_down {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  z-index: 1;
  transform: translateX(-50%);
  width: 30rpx;
  height: 30rpx;
  padding: 30rpx;
}

/* 新闻列表 */

.listNav {
  display: flex;
  align-items: center;
  height: 88rpx;
  background-color: #fff;
  border-bottom: 1px solid #e8e7e8;
}

.listNav text {
  font-size: 24rpx;
  color: #656565;
  margin-left: 30rpx;
}

.newsList {
  background-color: #fff;
  width: 100%;
}

.newsItem {
  border-bottom: 1px solid #e8e7e8;
  display: flex;
  flex-direction: row;
  padding: 30rpx;
}

.newsItem image {
  width: 30rpx;
  height: 30rpx;
}

.item_info {
  margin-left: 20rpx;
}

.newsTitle {
  font-weight: 500;
  width: 600rpx;
  display: inline-block;
  line-height: 36rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item_time {
  margin-top: 20rpx;
}

.item_time text {
  color: #8f8f8f;
  font-size: 22rpx;
  line-height: 22rpx;
  padding-right: 30rpx;
}

button::after {
  border: none;
}

button {
  background-color: #fff;
  border-radius: none;
  position: none;
  padding: 0;
}

.button-hover {
  color: rgb(0, 0, 0);
  background-color: #fff;
}
