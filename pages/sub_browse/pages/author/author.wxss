.s_listTeacherImg image{
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
}
.s_listTeacherCon{
  display: flex;
  flex-direction: column;
  padding-left: 18rpx;
}
.s_listTeacherName{
  font-size: 26rpx;
}
.s_listTeacherPosition{
  font-size: 26rpx;
