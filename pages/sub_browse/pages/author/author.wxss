  height: 68rpx;
  border-radius: 50%;
}

.s_listTeacherCon {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  display: -webkit-box;
  line-height: 36rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.s_listTeacherName {
  font-size: 26rpx;
}

.s_listTeacherPosition {
  font-size: 26rpx;
