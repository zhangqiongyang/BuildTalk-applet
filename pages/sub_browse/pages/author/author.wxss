}

.s_listCourseInfo {
  display: flex;
  flex-direction: column;
  padding-top: 26rpx;
}

.s_listCourseName {
  font-size: 30rpx;
  color: #333;
}

.s_listCourseSynopsis {
  font-size: 24rpx;
  color: #777;
  padding-top: 27rpx;
  display: -webkit-box;
  line-height: 36rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.S-listImg {
  padding-top: 90rpx;
  width: 146rpx;
  height: 146rpx;
}

.S-listImg image {
  width: 146rpx;
  height: 146rpx;
}

.s_listArticle {
  padding-top: 28rpx;
  display: flex;
  flex-direction: row;
}

.s_listArticleId {
  font-size: 26rpx;
  color: #888;
}

.s_listArticleName {
  font-size: 26rpx;
  color: #888;
  padding-left: 10rpx;
}

.underline {
  background-color: #ddd;
  height: 2rpx;
  width: 22rpx;
  margin-top: 28rpx;
  margin-bottom: 18rpx;
}

.s_listPriceGroup {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 0 30rpx;
}

.s_listPriceGroupText {
  color: #afafaf;
  font-size: 20rpx;
}

.color {
  color: #f86161;
}

.boutique_priceItem {
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 30rpx;
}

.s_listPrice {
  color: #f86161;
  font-size: 26rpx;
}

.search_none {
  color: #888;
  font-size: 30rpx;
  text-align: center;
  padding-top: 100rpx;
}

#jumpToFeedback {
  font-weight: bold;
  color: #3795ED;
  padding-left: 4rpx;
}
