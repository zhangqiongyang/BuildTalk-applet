}
.s_listCourseSynopsis{
  font-size: 22rpx;
  color: #888;
  padding-top: 20rpx;
}




.S-listImg{
  width: 182rpx;
  height: 174rpx;
}
.S-listImg image{
  width: 182rpx;
  height: 174rpx;
}




.s_listArticle{
  padding-top: 28rpx;
