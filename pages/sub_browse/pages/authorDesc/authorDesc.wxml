<!--pages/sub_browse/pages/authorDesc/authorDesc.wxml-->
<import src="/wxParse/wxParse.wxml" />

<view>

  <!-- 每日一谈 -->
  <view class='image_box'>
    <image class='image_back' src='/image/allNews_back.png' />
    <image class='image_down' src='/image/authorDesc_up.png' />
  </view>

  <!-- 个人介绍 -->
  <view wx:if='{{!isArticle}}' class='author_intro'>
    <view class='intro_item'>
      <view class='item_title'>谈小建</view>
      <view>
        <text class='item_text' style='margin-right:37rpx;'>{{authorInfo.education}}</text>
        <block wx:for='{{authorInfo.author_desc}}'>
          <text class='item_text'>{{item}}</text>
        </block>
      </view>
      <view class='item_text'>{{authorInfo.author_intro}}</view>

    </view>
    <view class='intro_item'>
      <view class='item_title'>曾获得</view>
      <text>{{authorInfo.received}}</text>
    </view>
  </view>

</view>