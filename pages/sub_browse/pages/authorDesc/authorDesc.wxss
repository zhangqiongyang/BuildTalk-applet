.authorDesc {
  position: absolute;
  /* left: 50%;
  transform: translateX(-50%); */
  top: 0;
  /* bottom: 0; */
  /* z-index: 2; */
  width: 100%;
  display: flex;
  z-index: 4;
  flex-direction: column;
  padding-top: 98rpx;
  padding-bottom: 30rpx;
  justify-content: center;
  text-align: center;
}

.authorDesc image {
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
