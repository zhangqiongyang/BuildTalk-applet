}

.authorInfoBox {
  padding: 183rpx 52rpx 126rpx 40rpx;
}

.authorInfo {
  padding-bottom: 90rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 34rpx !important;
  font-weight: bold !important;
  color: #333 !important;
  padding-bottom: 32rpx;
}

.authorInfo text {
  line-height: 42rpx;
  color: #666;
  font-size: 28rpx;
}

.courseInfo {
  display: flex;
  flex-direction: column;
}

.courseInfoText{
  display: flex;
  flex-direction: row;
}

