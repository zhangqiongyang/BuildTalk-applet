/* pages/sub_circle/pages/publishSubject/publishSubject.wxss */

.textarea {
  width: 100%;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}


.image_box{
  padding: 30rpx;
}
.image_item{
  position: relative;
  display: inline-block;
}
.image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.delete{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: -20rpx;
  top: -20rpx;
  padding: 10rpx;
}

.add {
  width: 100%;
  height: 88rpx;
  background: #f7f8fa;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.add image{
  width: 37rpx;
  height: 37rpx;
  padding: 30rpx;
}

.btn{
  font-size: 30rpx;
  padding: 20rpx;
}