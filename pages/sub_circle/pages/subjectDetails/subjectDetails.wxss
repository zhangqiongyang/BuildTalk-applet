/* 底部操作框 */

.operate{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 88rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}

.operate_msg {
  width: 460rpx;
  height: 66rpx;
  margin-left: 30rpx;
  background: #f7f8fa;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.operate image {
  width: 30rpx;
  height: 30rpx;
}

.operate text {
  font-size: 22rpx;
  color: #656565;
  margin-left: 10rpx;
}

.operate_like,.operate_share {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

