/* pages/sub_circle/pages/circleMember/circleMember.wxss */

.member_item_master {
  width: 100%;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e8e7e8;
}

.member_item {
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e8e7e8;
}

.item_info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item_image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-left: 30rpx;
}

.item_name {
  margin-left: 30rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.item_v {
  width: 16rpx;
  height: 14rpx;
  margin-left: 5rpx;
}

.item_master {
  font-size: 20rpx;
  font-weight: 500;
  color: #fff;
  background-color: #f5b83a;
  padding: 2rpx 5rpx;
  border-radius: 2px;
  margin-left: 20rpx;
}

.item_more {
  width: 25rpx;
  height: 25rpx;
  padding: 30rpx;
}
