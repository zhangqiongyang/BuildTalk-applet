/* pages/sub_circle/pages/circleInfo/circleInfo.wxss */

.circle_title {
  position: relative;
  width: 100%;
  background-color: #fff;
}

.title_back {
  width: 100%;
  height: 210rpx;
  position: absolute;
  /* z-index: 0; */
}

.title_share {
  width: 40rpx;
  height: 40rpx;
  padding: 30rpx;
  position: absolute;
  right: 0;
}

.title_info {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding-top: 135rpx;
}

.title_info image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.title_title {
  margin-top: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.title_master {
  color: #8f8f8f;
  font-size: 22rpx;
  margin-top: 18rpx;
}

.title_line {
  width: 40rpx;
  height: 4rpx;
  background-color: #32a7ff;
  margin-top: 27rpx;
}

/* 圈子信息 */

.circle_info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 70rpx 60rpx 70rpx;
  background-color: #fff;
}

.info_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item_num {
  font-size: 48rpx;
  line-height: 48rpx;
  font-weight: 500;
}

.item_name {
  font-size: 24rpx;
  line-height: 24rpx;
  margin-top: 20rpx;
  font-weight: 500;
  color: #656565;
}

.item_line {
  width: 1px;
  height: 74rpx;
  background: #e8e7e8;
}

/* 圈子设置 */

.circle_set {
  margin-top: 20rpx;
  background-color: #fff;
}

.set_item {
  width: 100%;
  height: 88rpx;
  border-bottom: 1px solid #e8e7e8;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.item_title {
  font-size: 30rpx;
  padding-left: 32rpx;
  font-weight: 500;
}

.item_right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item_image image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: -13rpx;
}

.item_more {
  width: 25rpx;
  height: 25rpx;
  padding: 30rpx;
}

/* 退出圈子 */

.circle_exit {
  margin-top: 20rpx;
  width: 100%;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
