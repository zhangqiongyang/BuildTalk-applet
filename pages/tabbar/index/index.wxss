/* pages/index/index.wxss */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.indexImgItem {
  text-align: center;
}

/* 搜索框 */

.index_search {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  line-height: 56rpx;
  /* border-bottom: 1px solid #9a9693; */
  width: 100%;
  height: 88rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.index_service_button {
  position: absolute;
  top: 0px;
  left: 0px;
  opacity: 0;
  width: 148rpx;
  height: 100%;
}

.index_service {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 148rpx;
  height: 100%;
  justify-content: center;
}

.index_service text {
  font-size: 20rpx;
  line-height: 20rpx;
  color: #000;
}

.index_service_img {
  width: 44rpx;
  height: 44rpx;
}

.index_search_input {
  background-color: #f5f5f5;
  border-radius: 50px;
  width: 454rpx;
  height: 68rpx;
  font-size: 26rpx;
  color: #424242;
  text-align: center;
  line-height: 68rpx;
  /* margin-top: 18rpx;
  margin-bottom: 16rpx; */
}

/* 轮播图 */

.index_slideshow {
  padding-top: 88rpx;
}

/* 新闻样式 */

.index_news {
  background-color: #fff;
}

.newsNav_new {
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #f1f1f1;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.navImg_new {
  width: 60rpx;
  height: 60rpx;
  padding-left: 30rpx;
}

.newsTitle_new {
  font-size: 34rpx;
  padding-left: 20rpx;
  font-weight: 500;
}

.newsNav {
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #f1f1f1;
  background-color: #fff;
  /* text-align: center; */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.news_line {
  width: 4px;
  height: 34rpx;
  background-color: #7ebbf4;
  margin-left: 30rpx;
}

.navImg {
  width: 12rpx;
  height: 16rpx;
}

.newsTitle {
  font-size: 34rpx;
  padding-left: 20rpx;
  padding-right: 30rpx;
  font-weight: 500;
}

.newsAll {
  height: 88rpx;
  width: 150rpx;
  display: inline-block;
  position: absolute;
  right: 0;
  text-align: right;
  padding-right: 34rpx;
}

.newsAll image {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 18%;
}

.newsList {
  padding: 30rpx;
}

.newsCon {
  width: 100%;
  display: flex;
  align-items: center;
}

.newsListImg {
  width: 30rpx;
  height: 30rpx;
}

/* 
.newsListImg image {
  width: 30rpx;
  height: 30rpx;
} */

.newsListText {
  display: inline-block;
  line-height: 62rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 640rpx;
}

/* 精品专栏样式 */

.index_boutique {
  background-color: #fff;
  /* margin-top: 18rpx; */
}

.swiperbackground {
  background-color: #fff;
  height: 438rpx;
}

.boutique_swiper {
  margin: 30rpx 0 30rpx 30rpx;
  width: 566rpx;
  height: 386rpx;
  background-color: #fff;
  border-radius: 20px;
  display: inline-block;
  border: 1px solid #eaeaea;
}

.boutique_img {
  width: 566rpx;
  height: 142rpx;
  overflow: hidden;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
}

.boutique_img image {
  width: 566rpx;
  height: 142rpx;
}

.boutique_course text {
  display: block;
}

.boutique_course {
  padding: 26rpx 20rpx 34rpx 22rpx;
  overflow: hidden;
  border-bottom: 1px solid #eaeaea;
  width: 566rpx;
  box-sizing: border-box;
}

.boutique_NameBox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.boutique_name {
  font-size: 30rpx;
}

.boutique_priceBox {
  display: flex;
  flex-direction: row;
}

.boutique_priceItem {
  display: flex;
  flex-direction: row;
}

.boutique_price {
  font-size: 26rpx;
  color: #f86161;
}

.boutique_num {
  font-size: 20rpx;
  color: #afafaf;
  line-height: 40rpx;
}

.boutique_introduce {
  float: left;
  font-size: 24rpx;
  color: #777;
  padding-top: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.boutique_author {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 22rpx 22rpx 22rpx;
}

.boutique_authorImg {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}

.index_line {
  width: 2rpx;
  height: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.boutique_authorName {
  margin-left: 20rpx;
  font-size: 26rpx;
}

.boutique_authorPosition {
  color: #afafaf;
  font-size: 22rpx;
}

/* 视频课程 */

.videoCourse {
  margin-top: 30rpx;
}

.courseItem {
  background-color: #fff;
  padding: 30rpx 30rpx 10rpx 30rpx;
  border-bottom: 1px solid #f1f1f1;
  display: flex;
  flex-direction: row;
}

.teacherImg {
  width: 140rpx;
  height: 140rpx;
  padding-right: 30rpx;
}

.teacherImg image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10px;
}

.courseContent {
  display: flex;
  flex-direction: column;
  flex: 1;
}

