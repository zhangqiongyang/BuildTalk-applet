.teacherInformation {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.teacherName {
  display: flex;
  font-size: 36rpx;
  flex-wrap: nowrap;
  /* width: 146rpx; */
  white-space: nowrap;
}

.teacherInformation image {
  width: 1px;
  height: 20px;
  padding: 0 20rpx;
}

.teacherPosition {
  font-size: 24rpx;
  color: #999;
  display: -webkit-box;
  line-height: 36rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.s_authorInfo {
  font-size: 24rpx;
  color: #333;
  padding-top: 28rpx;
  display: -webkit-box;
  line-height: 36rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.labelBox {
  padding-top: 30rpx;
  display: flex;
  flex-direction: row;
  margin-left: -10rpx;
  flex-wrap: wrap;
}

.label {
  font-size: 24rpx;
  color: #333;
  background-color: #f8f8f8;
  padding: 20rpx 50rpx;
  margin: 0 10rpx;
  border-radius: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

