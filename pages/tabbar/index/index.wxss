/* pages/index/index.wxss */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.indexImgItem {
  text-align: center;
}

/* 轮播图 */

/* 新闻样式 */

.index_news {
  background-color: #fff;
}

.newsNav_new {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.navImg_new {
  width: 135rpx;
  height: 40rpx;
  padding-left: 30rpx;
}

.newsTitle_new {
  font-size: 34rpx;
  padding-left: 20rpx;
  font-weight: 500;
}

.newsNav {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.news_title_box {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.news_line {
  width: 6rpx;
  height: 33rpx;
  background-color: #32a7ff;
  margin-left: 30rpx;
}

.navImg {
  width: 12rpx;
  height: 16rpx;
}

.newsTitle {
  font-size: 36rpx;
  padding-left: 20rpx;
  font-weight: bold;
}

.newsAll {
  height: 100%;
  padding: 30rpx;
  color: #656565;
  font-size: 22rpx;
  display: flex;
  align-items: center;
}

.newsList {
  padding: 0 30rpx 0 30rpx;
}

.newsCon {
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.newsListImg {
  width: 30rpx;
  height: 30rpx;
}

.newsListText {
  display: inline-block;
  line-height: 36rpx;
  padding-left: 10rpx;
  font-weight: 500;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 640rpx;
}

/* 热门话题圈 */

.circle_list {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.circle_item {
  width: 210rpx;
  height: 310rpx;
  background-color: #f7f8fa;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 10rpx;
}

.circle_image {
  width: 210rpx;
  height: 210rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.circle_info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.circle_name {
  font-weight: 500;
  text-align: center;
}

.circle_master {
  display: flex;
  justify-content: center;
  margin-top: 12rpx;
  align-items: center;
}

.circle_master text {
  font-size: 22rpx;
}

.circle_master image {
  width: 16rpx;
  height: 16rpx;
  margin-left: 7rpx;
}

/* 换一换 */

.change {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  width: 200rpx;
  margin: 0 auto;
}

.change image {
  width: 25rpx;
  height: 24rpx;
}

.change text {
  font-size: 20rpx;
  color: #8f8f8f;
  margin-left: 20rpx;
}

/* 精品专栏样式 */

.course_list {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
}

.course_item {
  width: 330rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 10rpx;
}

.course_image {
  width: 330rpx;
  height: 186rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.course_info {
  width: 100%;
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border-left: 1px solid #ebebeb;
  border-right: 1px solid #ebebeb;
  border-bottom: 1px solid #ebebeb;
}

.course_name {
  font-weight: bold;
}

.course_master {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}

.course_master text {
  font-size: 20rpx;
}

.course_master image {
  width: 16rpx;
  height: 16rpx;
  margin-left: 7rpx;
}

/* 热点专题 */

.hotTopic {
  margin-bottom: 60rpx;
}

.hotItem {
}

.hotImg {
  width: 330rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
}

.hotImg image {
  width: 330rpx;
  height: 128rpx;
  border-radius: 10rpx;
}

.hotImg text {
  font-size: 24rpx;
  margin-top: 20rpx;
}
